<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <IncludeBuildOutput>true</IncludeBuildOutput>
	  <!-- Don't ship an empty DLL for this project -->
	  <!-- 2. Tell NuGet to be silent about the empty lib folder -->
	  <NoWarn>$(NoWarn);NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\ExternProcessNetworkToolsWindows\ExternProcessNetworkToolsWindows.csproj" />
    <ProjectReference Include="..\ButlerSDK.Core.Tools.ExternProcess\ButlerSDK.Core.Tools.ExternProcess.csproj" />
    <ProjectReference Include="..\ButlerSDK.Core.Tools.Protocol\ButlerSDK.Core.Tools.csproj" />
    <ProjectReference Include="..\ButlerSDK.Core\ButlerSDK.Core.csproj" />
  </ItemGroup>

</Project>
