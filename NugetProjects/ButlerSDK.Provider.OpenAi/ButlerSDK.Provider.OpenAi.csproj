<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsPackable>true</IsPackable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
	</PropertyGroup>


	<ItemGroup>
		<ProjectReference Include="..\..\Butler5ProviderOpenAI\Butler5ProviderOpenAI.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\ButlerSDK.Core.Abstractions\ButlerSDK.Core.Abstractions.csproj" />
		<ProjectReference Include="..\ButlerSDK.Core\ButlerSDK.Core.csproj" />
	</ItemGroup>

	<!-- 
    This Target runs during the Pack process. 
    It grabs the DLLs from the referenced projects and adds them to the Package Output.
  -->
	<Target Name="CopyProjectReferencesToPackage" DependsOnTargets="ResolveReferences">
		<ItemGroup>
			<!-- Include only the Gemini provider project output -->
			<BuildOutputInPackage Include="@(ReferenceCopyLocalPaths)" Condition="'%(ReferenceSourceTarget)' == 'ProjectReference' and &#xD;&#xA;                                     '%(FileName)' == 'Butler5ProviderOpenAi'" />
		</ItemGroup>
	</Target>

</Project>
