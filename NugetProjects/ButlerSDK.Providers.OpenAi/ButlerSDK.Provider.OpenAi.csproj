<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	   <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <IncludeBuildOutput>true</IncludeBuildOutput>
	  <!-- Don't ship an empty DLL for this project -->
	  <!-- 2. Tell NuGet to shut up about the empty lib folder -->
	  <NoWarn>$(NoWarn);NU5128</NoWarn>
  </PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\ButlerSDK.Core\ButlerSDK.Core.csproj" />
		<ProjectReference Include="..\ButlerSDK.Provider\ButlerSDK.Provider.csproj" />
		<ProjectReference Include="..\..\Butler5ProviderOpenAI\Butler5ProviderOpenAI.csproj" />
	</ItemGroup>

</Project>
