
<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>



		<IsPackable>true</IsPackable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Butler5ProviderOllama\Butler5ProviderOllama.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\ButlerSDK.Core.Abstractions\ButlerSDK.Core.Abstractions.csproj" />
		<ProjectReference Include="..\ButlerSDK.Provider.OpenAi\ButlerSDK.Provider.OpenAi.csproj" />
	</ItemGroup>

	<Target Name="CopyProjectReferencesToPackage" DependsOnTargets="ResolveReferences">
		<ItemGroup>
			<!-- Include only the Gemini provider project output -->
			<BuildOutputInPackage Include="@(ReferenceCopyLocalPaths)" Condition="'%(ReferenceSourceTarget)' == 'ProjectReference' and &#xD;&#xA;                                     '%(FileName)' == 'Butler5ProviderOllama'" />
		</ItemGroup>
	</Target>
</Project>
